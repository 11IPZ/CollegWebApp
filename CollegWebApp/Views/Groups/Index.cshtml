@model IEnumerable<CollegWebApp.Domain.Models.Group>
 
<h2>Список груп</h2>
<table class="table">
    @if (Model.Count() == 0)
    {
        <p>Групи відсутні</p>
    }
    else
    {
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@Convert.ToInt32(group.Id)" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Convert.ToInt32(group.Id)">Редактувати</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Видалити
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create">Додати спеціальність</a>
