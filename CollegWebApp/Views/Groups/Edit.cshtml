@model CollegWebApp.Domain.ViewModels.EditGroupViewModel
@{
    ViewBag.Title = "Редактування групи";
}
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="Name">Назва групи</label>
        <input name="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="ProfessionId"></label><br />
        <select id="Id" name="Name" asp-items="ViewBag.Profession"></select>
        <span asp-validation-for="ProfessionId"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-outline-secondary" />
    </div>
</form>