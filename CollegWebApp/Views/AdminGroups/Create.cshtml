@model CollegWebApp.Domain.ViewModels.Groups.CreateGroupViewModel
 
<div asp-validation-summary="All" class="text-danger"></div>
 
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Назва групи</label>
        <input name="Name" class="form-control" />
    </div>
    <div>
        <label asp-for="ProfessionId"></label><br />
        <select id="Id" name="Name" asp-items="ViewBag.Profession"></select>
        <span asp-validation-for="ProfessionId"></span>
    </div>

    <button type="submit" class="btn btn-primary">Додати</button>
</form>