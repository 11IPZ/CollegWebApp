@model CollegeApp.Models.Group
 
<h2>Створення групи</h2>
 
<form asp-action="CreateGrop" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="NameGroup">Введіть назву</label>
            <input asp-for="NameGroup" />
            <span asp-validation-for="NameGroup" />
        </div>
        <div class="form-group">
            <input type="submit" value="Створити" class="btn" />
        </div>
    </div>
</form>