@{
}

<form asp-action="Create" asp-controller="Home"  asp-antiforgery="true">
    <div>
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Surname"></label>
            <input asp-for="Surname" />
        </div>
        <div>
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" />
        </div>
        <div>
            <label asp-for="Group"></label>
            <select asp-for="Group" asp-items="ViewBag.Groups"></select>
        </div>
        <div>
            <label asp-for="DateBorn"></label>
            <input asp-for="DateBorn" asp-format="{0:dd/MM/yyyy}"/>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </div>
</form>